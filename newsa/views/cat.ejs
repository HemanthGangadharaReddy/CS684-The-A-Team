<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>News API</title>
     <link rel="stylesheet" href="style.css">



     <style type="text/css">
  .pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20px;
}

.pagination a {
  display: inline-block;
  padding: 8px 16px;
  text-decoration: none;
  color: #000;
  border: 1px solid #ddd;
}

.pagination a.active {
  background-color: #4CAF50;
  color: white;
  border: 1px solid #4CAF50;
}

.pagination a:hover:not(.active) {
  background-color: #ddd;
}

.pagination a.prev,
.pagination a.next {
  margin-left: 5px;
  margin-right: 5px;
}

.new {

    background-color: blue;
    
}

</style>


  </head>
  <body>
   <div class="header">
            <img src="media/logo.png" class="logo">
        <ul class="nav-links">



     <li>
         <a href="/articles">HOME</a>
     </li>
    <% if (user.sport) {%>

    <li>

    <% if (current_cat == 'sports') { %>
    <a href="/cat/sports" class="new">SPORTS</a>
    <%} else { %>
    <a href="/cat/sports">SPORTS </a>
    <%} %>
  </li>
    
   
    <% } %>

    

    <% if (user.general) {%>
    <li>
   <% if (current_cat == "general") { %>
    <a href="/cat/general" class="new">GENERAL</a>
    <%} else { %>
    <a href="/cat/general">GENERAL</a>
     <%} %>

    </li>


    <% } %>


        <% if (user.science) {%>
        <li>
            <% if (current_cat == 'science') {%>
            <a href="/cat/science" class="new">SCIENCE</a>
            <%} else {%>
            <a href="/cat/science">SCIENCE</a>
            <%} %>

            }
        </li>

   
    <% } %>

        <% if (user.health) {%>
                    <li>

                        <% if (current_cat == 'health') {%>
                        <a href="/cat/health" class="new">HEALTH</a>

                        <%} else {%>

                        <a href="/cat/health">HEALTH</a>

                        <%} %>
                    </li>

   
    <% } %>

        <% if (user.entertainment) {%>

                    <li>
                        <% if (current_cat == 'entertainment') {%>
                        <a href="/cat/entertainment" class="new">ENTERTAINMENT</a>

                        <%} else {%>
                        <a href="/cat/entertainment">ENTERTAINMENT</a>

                        <%} %>
                    </li>
         
   
    <% } %>


        <% if (user.technology) {%>


           <li>

            <% if (current_cat == 'technology') {%>

            <a href="/cat/technology" class="new">TECHNOLOGY</a>

            <%} else {%>

            <a href="/cat/technology">TECHNOLOGY</a>

            <%} %>

        </li>
   
    <% } %>

        <% if (user.business) {%>


        <li>
            <% if (current_cat == 'business') {%>
            <a href="/cat/business" class="new">BUSINESS</a>

            <%} else {%>
            <a href="/cat/business">BUSINESS</a>

            <%} %>
        </li>
   
    <% } %>


            
            
        </ul>
        <a class="button" style="margin-left: 90px;" href="/" >SIGN OUT</button>
        </a>
  
        <span style="color: white">Hello, <%= user.username %></span>
         <a href="/articles" class="button">refresh</a> <a href="/profile" class="button">Setting </a>

       
    </div>


<br><br>
   
    <% articles.forEach(article => { %>
    <div style="border:2px solid black; margin:0px 10% 1px 10%; padding:4%;">
      <h2><%= article.title %></h2>
      <p><%= article.description %></p>
      <p><a href="<%= article.url %>">Read More</a></p>
  </div>
    <% }) %>




       <div class="pagination">


    <% if (currentPage > 1) { %>
      <a href="?page=<%= currentPage - 1 %>">Previous</a>
      <% } %>

      <% for (let i = 1; i <= totalPages; i++) { %>
      <% if (i === currentPage) { %>
      <span> <a class="active"><%= i %></a></span>
      <% } else { %>
      <a href="?page=<%= i %>" ><%= i %></a>
      <% } %>
      <% } %>

      <% if (currentPage < totalPages) { %>
      <a href="?page=<%= currentPage + 1 %>">Next</a>
      <% } %>
</div>
  </body>
</html>
