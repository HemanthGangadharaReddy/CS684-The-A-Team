       <div class="pagination">


    <% if (currentPage > 1) { %>
      <a href="?page=<%= currentPage - 1 %>">Previous</a>
      <% } %>

      <% for (let i = 1; i <= totalPages; i++) { %>
      <% if (i === currentPage) { %>
      <span> <a class="active"><%= i %></a></span>
      <% } else { %>
      <a href="?page=<%= i %>" ><%= i %></a>
      <% } %>
      <% } %>

      <% if (currentPage < totalPages) { %>
      <a href="?page=<%= currentPage + 1 %>">Next</a>
      <% } %>
</div>
