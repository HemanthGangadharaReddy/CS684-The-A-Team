<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>News API Pagination Example</title>
  </head>
  <body>
    <h1>News API Pagination Example</h1>
    <ul>
      <% articles.forEach(article => { %>
      <li>
        <h2><%= article.title %></h2>
        <p><%= article.description %></p>
      </li>
      <% }); %>
    </ul>

    <div>
      <% if (currentPage > 1) { %>
      <a href="?page=<%= currentPage - 1 %>">Previous</a>
      <% } %>

      <% for (let i = 1; i <= totalPages; i++) { %>
      <% if (i === currentPage) { %>
      <span><%= i %></span>
      <% } else { %>
      <a href="?page=<%= i %>"><%= i %></a>
      <% } %>
      <% } %>

      <% if (currentPage < totalPages) { %>
      <a href="?page=<%= currentPage + 1 %>">Next</a>
      <% } %>
    </div>
  </body>
</html>
